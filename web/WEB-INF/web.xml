<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>AdminHome.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>turn_on</servlet-name>
        <servlet-class>web_servlets.TurnOnServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>turn_on</servlet-name>
        <url-pattern>/turn_on</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>turn_off</servlet-name>
        <servlet-class>web_servlets.TurnOffServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>turn_off</servlet-name>
        <url-pattern>/turn_off</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>web_servlets.ValidateLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>manage_employee</servlet-name>
        <servlet-class>web_servlets.AddEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manage_employee</servlet-name>
        <url-pattern>/manage_employee</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>manage_room</servlet-name>
        <servlet-class>web_servlets.AddRoomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manage_room</servlet-name>
        <url-pattern>/manage_room</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>manage_resource</servlet-name>
        <servlet-class>web_servlets.AddResourceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manage_resource</servlet-name>
        <url-pattern>/manage_resource</url-pattern>
    </servlet-mapping>
</web-app>
